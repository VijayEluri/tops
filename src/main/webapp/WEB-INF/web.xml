<web-app>
	<servlet>
		<servlet-name>FindFiles</servlet-name>
		<servlet-class>tops.web.display.servlet.FindFilesServlet</servlet-class>
		<init-param>
			<param-name>cath</param-name>
			<param-value>/Users/maclean/tops/web/topsfiles/cath</param-value>
		</init-param>
	    <init-param>
            <param-name>test</param-name>
            <param-value>/topsfiles/test</param-value>
        </init-param>
		<init-param>
			<param-name>lib</param-name>
			<param-value>/Users/maclean/tops/web/lib</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>SimpleCompareServlet</servlet-name>
		<servlet-class>tops.web.engine.SimpleCompareServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ComparisonServlet</servlet-name>
		<servlet-class>tops.web.engine.TopsComparisonServlet</servlet-class>
		<init-param>
			<param-name>compareStartPageURL</param-name>
			<param-value>localhost/tops/compare.html</param-value>
		</init-param>
		<init-param>
			<param-name>advancedStartPageURL</param-name>
			<param-value>localhost/tops/advanced.html</param-value>
		</init-param>
		<init-param>
			<param-name>matchStartPageURL</param-name>
			<param-value>localhost:8180/tops/pattern/classicmatch</param-value>
		</init-param>
		<init-param>
			<param-name>servletURL</param-name>
			<param-value>/tops/pattern/compare</param-value>
		</init-param>
		<init-param>
			<param-name>cartoonURL</param-name>
			<param-value>/tops/view</param-value>
		</init-param>
		<init-param>
			<param-name>diagramURL</param-name>
			<param-value>/tops/diagram</param-value>
		</init-param>
		<init-param>
			<param-name>cathNumberURL</param-name>
			<param-value>http://www.biochem.ucl.ac.uk/cgi-bin/cath/SearchPdb.pl?type=CATH&amp;query=</param-value>
		</init-param>
		<init-param>
			<param-name>cathNameURL</param-name>
			<param-value>http://www.biochem.ucl.ac.uk/cgi-bin/cath/SearchPdb.pl?type=PDB&amp;query=</param-value>
		</init-param>
		<init-param>
			<param-name>scopURL</param-name>
			<param-value>http://scop.mrc-lmb.cam.ac.uk/scop/search.cgi?key=</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>MatchServlet</servlet-name>
		<servlet-class>tops.web.engine.TopsMatchServlet</servlet-class>
		<init-param>
		  <param-name>patternSourceType</param-name>
		  <param-value>MEMORY</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>ClassicMatchServlet</servlet-name>
		<servlet-class>tops.web.engine.ClassicMatchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PatternGroupServlet</servlet-name>
		<servlet-class>tops.web.engine.TopsPatternGroupServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GroupServlet</servlet-name>
		<servlet-class>tops.web.engine.TopsGroupServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ClassificationServlet</servlet-name>
		<servlet-class>tops.web.engine.ClassificationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CartoonServlet</servlet-name>
		<servlet-class>tops.web.display.servlet.CartoonServlet</servlet-class>
		<init-param>
			<param-name>cath</param-name>
			<param-value>/Users/maclean/tops/web/topsfiles/cath</param-value>
		</init-param>
		<init-param>
			<param-name>scop</param-name>
			<param-value>/Users/maclean/tops/web/topsfiles/scop</param-value>
		</init-param>
		<init-param>
            <param-name>test</param-name>
            <param-value>/topsfiles/test</param-value>
        </init-param>
		<init-param>
			<param-name>lib</param-name>
			<param-value>/Users/maclean/tops/web/lib</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>DiagramServlet</servlet-name>
		<servlet-class>tops.web.display.servlet.DiagramServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PipelineServlet</servlet-name>
		<servlet-class>tops.web.engine.PipelineServlet</servlet-class>
		<init-param>
			<param-name>home.dir</param-name>
			<param-value>/Users/maclean/tops/web</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>TranslationServlet</servlet-name>
		<servlet-class>tops.web.engine.TranslationServlet</servlet-class>
		<init-param>
			<param-name>scratch.dir</param-name>
			<param-value>scratch</param-value>
		</init-param>
		<init-param>
            <param-name>executable.path</param-name>
            <param-value>bin</param-value>
        </init-param>
	</servlet>
	<servlet>
		<servlet-name>LogAnalyserServlet</servlet-name>
		<servlet-class>tops.web.engine.LogAnalyserServlet</servlet-class>
		<init-param>
			<param-name>home.dir</param-name>
			<param-value>/Users/maclean/tops</param-value>
		</init-param>
	</servlet>
	<servlet>
        <servlet-name>SummaryServlet</servlet-name>
        <servlet-class>tops.web.display.servlet.SummaryServlet</servlet-class>
    </servlet>
