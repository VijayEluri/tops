	<servlet-mapping>
		<servlet-name>LogAnalyserServlet</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimpleCompareServlet</servlet-name>
		<url-pattern>/pattern/simple</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ComparisonServlet</servlet-name>
		<url-pattern>/pattern/compare</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FindFiles</servlet-name>
		<url-pattern>/find</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PatternGroupServlet</servlet-name>
		<url-pattern>/patterngroup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GroupServlet</servlet-name>
		<url-pattern>/pattern/group</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClassificationServlet</servlet-name>
		<url-pattern>/pattern/class</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MatchServlet</servlet-name>
		<url-pattern>/pattern/match</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClassicMatchServlet</servlet-name>
		<url-pattern>/pattern/classicmatch</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CartoonServlet</servlet-name>
		<url-pattern>/view/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DiagramServlet</servlet-name>
		<url-pattern>/diagram/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PipelineServlet</servlet-name>
		<url-pattern>/pipe</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TranslationServlet</servlet-name>
		<url-pattern>/translate</url-pattern>
	</servlet-mapping>
